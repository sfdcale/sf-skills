<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>62.0</apiVersion>
    <label>{{FLOW_LABEL}}</label>
    <description>{{FLOW_DESCRIPTION}}</description>
    <processType>AutoLaunchedFlow</processType>
    <status>Draft</status>

    <!-- Before-Save Trigger Configuration -->
    <start>
        <locationX>50</locationX>
        <locationY>50</locationY>
        <object>{{OBJECT_NAME}}</object>
        <recordTriggerType>CreateAndUpdate</recordTriggerType>
        <triggerType>RecordBeforeSave</triggerType>
        <bulkSupport>true</bulkSupport>
        <connector>
            <targetReference>Decision_Check_Criteria</targetReference>
        </connector>
    </start>

    <!-- Decision: Check Entry Criteria -->
    <decisions>
        <name>Decision_Check_Criteria</name>
        <label>Check Entry Criteria</label>
        <locationX>50</locationX>
        <locationY>150</locationY>
        <defaultConnectorLabel>Default Outcome</defaultConnectorLabel>
        <rules>
            <name>Criteria_Met</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>$Record.{{FIELD_NAME}}</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>{{FIELD_VALUE}}</stringValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Update_Record_Fields</targetReference>
            </connector>
            <label>Criteria Met</label>
        </rules>
    </decisions>

    <!-- Assignment: Update Record Fields (Before Save) -->
    <assignments>
        <name>Update_Record_Fields</name>
        <label>Update Record Fields</label>
        <locationX>50</locationX>
        <locationY>250</locationY>
        <assignmentItems>
            <assignToReference>$Record.{{TARGET_FIELD}}</assignToReference>
            <operator>Assign</operator>
            <value>
                <stringValue>{{NEW_VALUE}}</stringValue>
            </value>
        </assignmentItems>
        <assignmentItems>
            <assignToReference>$Record.Last_Modified_By_Flow__c</assignToReference>
            <operator>Assign</operator>
            <value>
                <booleanValue>true</booleanValue>
            </value>
        </assignmentItems>
    </assignments>

    <!-- Note: Before-Save flows modify $Record directly -->
    <!-- No explicit DML needed - changes are saved with the record -->

    <!-- Variables for Calculations -->
    <variables>
        <name>varCalculatedValue</name>
        <dataType>String</dataType>
        <isCollection>false</isCollection>
        <isInput>false</isInput>
        <isOutput>false</isOutput>
    </variables>

    <variables>
        <name>varErrorFlag</name>
        <dataType>Boolean</dataType>
        <isCollection>false</isCollection>
        <isInput>false</isInput>
        <isOutput>false</isOutput>
        <value>
            <booleanValue>false</booleanValue>
        </value>
    </variables>
</Flow>
