{
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ${CLAUDE_PLUGIN_ROOT}/hooks/scripts/validate_integration.py \"${TOOL_INPUT_FILE_PATH}\"",
            "timeout": 60000
          },
          {
            "type": "command",
            "command": "python3 ${CLAUDE_PLUGIN_ROOT}/../shared/hooks/suggest-related-skills.py",
            "timeout": 5000
          }
        ]
      },
      {
        "matcher": "Edit",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ${CLAUDE_PLUGIN_ROOT}/../shared/hooks/suggest-related-skills.py",
            "timeout": 5000
          }
        ]
      }
    ]
  }
}
