{
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ${CLAUDE_PLUGIN_ROOT}/hooks/scripts/post-tool-validate.py",
            "timeout": 60000
          },
          {
            "type": "command",
            "command": "python3 ~/.claude/plugins/marketplaces/sf-skills/shared/hooks/suggest-related-skills.py sf-lwc",
            "timeout": 5000
          }
        ]
      },
      {
        "matcher": "Edit",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ${CLAUDE_PLUGIN_ROOT}/hooks/scripts/post-tool-validate.py",
            "timeout": 60000
          },
          {
            "type": "command",
            "command": "python3 ~/.claude/plugins/marketplaces/sf-skills/shared/hooks/suggest-related-skills.py sf-lwc",
            "timeout": 5000
          }
        ]
      }
    ]
  }
}
